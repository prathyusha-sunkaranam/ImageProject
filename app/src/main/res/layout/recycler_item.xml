<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bankstatement_bg" />
    <ImageView
        android:id="@+id/form_labl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/formtxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:gravity="center_horizontal"
        android:layout_below="@+id/form_labl"
        android:textColor="#fff"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp"
        android:gravity="center_horizontal"
        android:layout_below="@+id/formtxt">

    <TextView
        android:id="@+id/left_brce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text="("
        android:textColor="#e5dad9d9"/>
    <TextView
        android:id="@+id/countForm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:gravity="center_horizontal"
        android:layout_alignRight="@+id/left_brce"
        android:layout_marginBottom="5dp"
        android:textColor="#e5dad9d9"/>
    <TextView
        android:id="@+id/right_brce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text=")"
        android:layout_alignRight="@+id/countForm"
        android:textColor="#e5dad9d9"/>
    </LinearLayout>

</RelativeLayout>
